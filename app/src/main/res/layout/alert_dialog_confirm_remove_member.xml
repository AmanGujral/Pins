<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove from project"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/dark_grey"
        android:paddingVertical="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to remove"
        android:textSize="22sp"
        android:textColor="@color/medium_grey"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/alert_dialog_confirm_remove_member_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taranjyot Singh"
        android:textSize="22sp"
        android:textColor="@color/green"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from this project?"
        android:textSize="22sp"
        android:textColor="@color/medium_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/alert_dialog_confirm_remove_member_no_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"/>


        <Button
            android:id="@+id/alert_dialog_confirm_remove_member_yes_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"/>

    </LinearLayout>

</LinearLayout>